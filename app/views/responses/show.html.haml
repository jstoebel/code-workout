%html{:lang => "en"}
  %head
    %title Bootstrap Case
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %link{:href => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", :rel => "stylesheet"}/
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"}
    %script{:src => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"}
  %body
    .container
      .panel.panel-info
        .panel-heading
          .row
            .col-sm-4
              %td= link_to "Back", response_path, class: "btn-sm btn-info"
            .col-sm-8
              = @response.title
        .panel.body
          .row
            .col-sm-12
              %p= @response.body

    %tr
	  %td= link_to "Edit", edit_response_path(@response)
	  %td
		    = form_for @response, url: response_path(@response.id), html: {:onsubmit => "return confirm('Are you sure you want to delete the question?');"}, method: :delete do |f|
				= submit_tag('Delete')
	%p= @response.text
	%p= @response.user_id
	%p= (@response.created_at).strftime("%m-%d-%Y")