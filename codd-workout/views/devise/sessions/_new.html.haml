= semantic_form_for User.new, url: session_path(User.new),
  html: { class: "form-horizontal" } do |f|

  = f.inputs do
    .form-group
      = f.input :email, input_html: { autofocus: true }
    .form-group
      = f.input :password
    .checkbox
      %label
        = f.check_box :remember_me, checked: true, style: 'margin-top: 6px;'
        Remember me
      other

  = f.actions do
    = f.submit 'Sign in', class: 'btn btn-primary'
